<Window x:Class="SentryX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SentryX" 
        Height="600" Width="1000"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- 工具列 - 修正後的版本 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray">
            <Button Name="DeviceManagerButton" Content="🔧 設備管理" Click="DeviceManagerButton_Click" 
                    ToolTip="開啟設備管理視窗"/>
            <Button Name="RefreshButton" Content="🔄 刷新" Click="RefreshButton_Click" 
                    ToolTip="刷新設備列表"/>

            <!-- 解碼模式選擇 - 現在在正確的位置 -->
            <Separator Width="20"/>
            <TextBlock Text="解碼模式:" VerticalAlignment="Center" FontWeight="Bold"/>

            <Separator Width="20"/>
            <TextBlock Text="系統狀態:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Name="SystemStatusTextBlock" VerticalAlignment="Center" Margin="10,0" 
                       Text="就緒" Foreground="Green"/>
            <Separator Width="20"/>
            <TextBlock Text="設備統計:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Name="DeviceStatsTextBlock" VerticalAlignment="Center" Margin="10,0" 
                       Text="總計: 0, 在線: 0"/>
            <ComboBox x:Name="DecodeTypeComboBox" Width="103" 
                      SelectionChanged="DecodeTypeComboBox_SelectionChanged"
                      ToolTip="選擇視頻解碼方式" Height="25">
                <ComboBoxItem Content="自動選擇" Tag="Auto" IsSelected="True"/>
                <ComboBoxItem Content="軟體解碼" Tag="Software"/>
                <ComboBoxItem Content="硬體解碼" Tag="Hardware"/>
            </ComboBox>
        </StackPanel>

        <!-- 主要內容區：左右分割 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側：設備清單 -->
            <DockPanel Grid.Column="0">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="已連接設備" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button Name="QuickAddDeviceButton" Content="➕" Width="25" Height="25" 
                            Margin="10,0,0,0" Click="QuickAddDeviceButton_Click"
                            ToolTip="快速添加設備"/>
                </StackPanel>

                <ListBox Name="DeviceListBox" 
                        SelectionChanged="DeviceListBox_SelectionChanged"
                        MouseDoubleClick="DeviceListBox_MouseDoubleClick">
                </ListBox>
            </DockPanel>

            <!-- 中間分隔線 -->
            <GridSplitter Grid.Column="1" Width="5" 
                         HorizontalAlignment="Stretch" 
                         Background="Gray"/>

            <!-- 右側：視頻顯示區 -->
            <DockPanel Grid.Column="2">
                <!-- 視頻控制按鈕 - 在右上方 -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="視頻顯示區" FontWeight="Bold" VerticalAlignment="Center"/>

                    <!-- 把播放控制按鈕放在右邊 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                               Margin="20,0,0,0">
                        <Button Name="StartVideoButton" Content="▶️ 播放" Margin="5,0" 
                                Click="StartVideoButton_Click" IsEnabled="False"
                                ToolTip="開始播放選中的攝影機通道"/>
                        <Button Name="StopVideoButton" Content="⏹️ 停止" Margin="5,0" 
                                Click="StopVideoButton_Click" IsEnabled="False"
                                ToolTip="停止視頻播放"/>
                    </StackPanel>
                </StackPanel>

                <!-- 使用 WindowsFormsHost 來承載視頻 -->
                <WindowsFormsHost Name="VideoHost" Background="Black">
                    <!-- 這裡會在 C# 代碼中動態添加 Panel -->
                </WindowsFormsHost>
            </DockPanel>
        </Grid>

        <!-- 下方狀態區 -->
        <DockPanel Grid.Row="2" Background="LightBlue">
            <TextBlock DockPanel.Dock="Top" Text="系統狀態" FontWeight="Bold" Margin="5"/>
            <ScrollViewer Name="StatusScrollViewer">
                <TextBlock Name="StatusTextBlock" 
                          Text="系統啟動完成，點擊「設備管理」開始添加設備..." 
                          TextWrapping="Wrap" 
                          Margin="5"/>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>