<Window x:Class="SentryX.PTZControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PTZ雲台控制" Height="700" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize"
        Background="#FF2D2D30">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- 標題和設備資訊 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="PTZ雲台控制" FontSize="16" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock x:Name="DeviceInfoTextBlock" Text="請先選擇一個正在播放的分割區域" 
                       FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- 速度控制 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock Text="控制速度：" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="SpeedComboBox" Width="60" SelectedIndex="3">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
            </ComboBox>
        </StackPanel>

        <!-- PTZ控制區域 -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 方向控制 - 修正尺寸和布局 -->
            <GroupBox Grid.Column="0" Header="方向控制" Foreground="White" BorderBrush="Gray" Padding="5">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <!-- 第一行 - 增大按鈕尺寸並調整Margin -->
                    <Button x:Name="TopLeftButton" Grid.Row="0" Grid.Column="0" 
                            Content="↖" FontSize="20" FontWeight="Bold"
                            Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                            Margin="1" Padding="2"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Button x:Name="TopButton" Grid.Row="0" Grid.Column="1" 
                            Content="↑" FontSize="20" FontWeight="Bold"
                            Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                            Margin="1" Padding="2"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Button x:Name="TopRightButton" Grid.Row="0" Grid.Column="2" 
                            Content="↗" FontSize="20" FontWeight="Bold"
                            Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                            Margin="1" Padding="2"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

                    <!-- 第二行 -->
                    <Button x:Name="LeftButton" Grid.Row="1" Grid.Column="0" 
                            Content="←" FontSize="20" FontWeight="Bold"
                            Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                            Margin="1" Padding="2"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Button x:Name="CenterButton" Grid.Row="1" Grid.Column="1" 
                            Content="●" FontSize="18" FontWeight="Bold"
                            Background="#FFFF6B6B" Foreground="White" BorderBrush="DarkRed" 
                            Margin="1" Padding="2"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                            ToolTip="停止移動"/>
                    <Button x:Name="RightButton" Grid.Row="1" Grid.Column="2" 
                            Content="→" FontSize="20" FontWeight="Bold"
                            Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                            Margin="1" Padding="2"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

                    <!-- 第三行 -->
                    <Button x:Name="BottomLeftButton" Grid.Row="2" Grid.Column="0" 
                            Content="↙" FontSize="20" FontWeight="Bold"
                            Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                            Margin="1" Padding="2"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Button x:Name="BottomButton" Grid.Row="2" Grid.Column="1" 
                            Content="↓" FontSize="20" FontWeight="Bold"
                            Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                            Margin="1" Padding="2"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Button x:Name="BottomRightButton" Grid.Row="2" Grid.Column="2" 
                            Content="↘" FontSize="20" FontWeight="Bold"
                            Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                            Margin="1" Padding="2"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </Grid>
            </GroupBox>

            <!-- 縮放和焦距控制 - 同樣調整尺寸 -->
            <GroupBox Grid.Column="2" Header="縮放/焦距" Foreground="White" BorderBrush="Gray" Padding="5">
                <StackPanel Margin="10">
                    <!-- 變倍控制 -->
                    <TextBlock Text="變倍 (Zoom)" FontSize="12" Foreground="White" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Button x:Name="ZoomInButton" Content="+" Width="45" Height="35" 
                                FontSize="16" FontWeight="Bold"
                                Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                                Margin="3" Padding="2"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button x:Name="ZoomOutButton" Content="−" Width="45" Height="35" 
                                FontSize="16" FontWeight="Bold"
                                Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                                Margin="3" Padding="2"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- 調焦控制 -->
                    <TextBlock Text="調焦 (Focus)" FontSize="12" Foreground="White" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Button x:Name="FocusNearButton" Content="近" Width="45" Height="35" FontSize="12"
                                Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                                Margin="3" Padding="2"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button x:Name="FocusFarButton" Content="遠" Width="45" Height="35" FontSize="12"
                                Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                                Margin="3" Padding="2"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- 光圈控制 -->
                    <TextBlock Text="光圈 (Iris)" FontSize="12" Foreground="White" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="IrisOpenButton" Content="開" Width="45" Height="35" FontSize="12"
                                Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                                Margin="3" Padding="2"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button x:Name="IrisCloseButton" Content="關" Width="45" Height="35" FontSize="12"
                                Background="#FF3F3F46" Foreground="White" BorderBrush="Gray" 
                                Margin="3" Padding="2"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- 預置點控制 -->
        <GroupBox Grid.Row="3" Header="預置點控制" Foreground="White" BorderBrush="Gray" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="預置點：" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                <TextBox x:Name="PresetNumberTextBox" Grid.Column="1" Text="1" FontSize="12" 
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="28"/>

                <!-- 間隔 -->
                <Rectangle Grid.Column="2" Width="10"/>

                <Button x:Name="GotoPresetButton" Grid.Column="3" Content="轉到" FontSize="11" Height="28"
                        Background="#FF007ACC" Foreground="White" BorderBrush="DarkBlue" Margin="2,0"/>
                <Button x:Name="SetPresetButton" Grid.Column="4" Content="設定" FontSize="11" Height="28"
                        Background="#FF238B45" Foreground="White" BorderBrush="DarkGreen" Margin="2,0"/>
                <Button x:Name="DeletePresetButton" Grid.Column="5" Content="刪除" FontSize="11" Height="28"
                        Background="#FFD13438" Foreground="White" BorderBrush="DarkRed" Margin="2,0"/>
            </Grid>
        </GroupBox>

        <!-- 狀態顯示 -->
        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0"
                      Background="#FF1E1E1E" BorderBrush="Gray" BorderThickness="1">
            <TextBlock x:Name="StatusTextBlock" FontSize="10" Foreground="LightGray" 
                       Padding="5" TextWrapping="Wrap" Text="PTZ控制器已初始化&#x0a;"/>
        </ScrollViewer>
    </Grid>
</Window>